{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "src/hooks",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "lib": ["es2018", "dom"],
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "src/example.tsx",
    "src/hooks/index.test.tsx",
    "jest.config.ts"
  ]
}
